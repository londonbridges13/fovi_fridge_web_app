<%= simple_form_for(@survey) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :question %>
    <%= f.input :type %>
    <%= f.input :pre_question %>    
  </div>

  <%= f.input :image, as: :file %>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
