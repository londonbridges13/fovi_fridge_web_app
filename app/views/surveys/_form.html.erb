<%= simple_form_for(@survey) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :question %>
    <%= f.input :stype %>
  </div>

  <%= f.input :image, as: :file %>

  <div class="form-inputs">
    <%= f.input :option1 %>
    <%= f.input :option2 %>
    <%= f.input :option3 %>
    <%= f.input :option4 %>
    <%= f.input :option5 %>
  </div>

  <div class="form-inputs">
    <%= f.input :pre_question %>
  </div>

  <div class="form-inputs">
    <%= f.input :note %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
